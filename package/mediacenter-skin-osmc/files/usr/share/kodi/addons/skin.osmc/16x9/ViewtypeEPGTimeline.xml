<includes>

	<include name="EPGTimeline">

		<control type="group">
			<visible>Control.IsVisible(10)</visible>

			<!-- EPG Grid -->
			<control type="epggrid" id="10">
				<left>120</left>
				<top>174</top>
				<width>1760</width>
				<height>606</height>
				<onup>10</onup>
				<ondown>10</ondown>
				<onleft>3000</onleft>
				<onright>3000</onright>
				<onback>3000</onback>
				<rulerunit>6</rulerunit>
				<timeblocks>40</timeblocks>
				<progresstexture border="4,61,4,4">pvr/ProgressTimeline.png</progresstexture>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<rulerlayout width="100" height="54">

					<control type="label" id="2">
						<width>100</width>
						<height>33</height>
						<font>font33</font>
						<label>$INFO[ListItem.Label]</label>
					</control>

				</rulerlayout>

				<channellayout width="500" height="92">

					<!-- Channel image -->
					<control type="image">
						<left>8</left>
						<top>8</top>
						<width>76</width>
						<height>76</height>
						<texture background="true" fallback="pvr/defaultchannel.png">$VAR[PVRChannelIcon]</texture>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>102</left>
						<width>332</width>
						<height>92</height>
						<textcolor>TextColorFO</textcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>

					<!-- Channel number -->
					<control type="label">
						<left>478</left>
						<width>88</width>
						<height>92</height>
						<align>right</align>
						<textcolor>TextColorFO</textcolor>
						<label>[B]$INFO[ListItem.ChannelNumber][/B]</label>
					</control>

				</channellayout>

				<focusedchannellayout width="500" height="92">

					<!-- Background -->
					<control type="image">
						<left>3</left>
						<top>3</top>
						<width>494</width>
						<height>86</height>
						<texture border="2">pvr/ProgressBack.png</texture>
					</control>

					<!-- Channel image -->
					<control type="image">
						<left>8</left>
						<top>8</top>
						<width>76</width>
						<height>76</height>
						<texture background="true" fallback="pvr/defaultchannel.png">$VAR[PVRChannelIcon]</texture>
						<animation effect="fade" start="100" end="70" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(10)">Conditional</animation>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>102</left>
						<width>332</width>
						<height>92</height>
						<label>$INFO[ListItem.ChannelName]</label>
						<animation effect="fade" start="100" end="70" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(10)">Conditional</animation>
					</control>

					<!-- Channel number -->
					<control type="label">
						<left>478</left>
						<width>88</width>
						<height>92</height>
						<align>right</align>
						<label>[B]$INFO[ListItem.ChannelNumber][/B]</label>
						<animation effect="fade" start="100" end="70" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(10)">Conditional</animation>
					</control>

				</focusedchannellayout>

				<itemlayout width="100" height="92">

					<!-- Background -->
					<control type="image" id="14">
						<left>3</left>
						<top>3</top>
						<width>94</width>
						<height>86</height>
						<colordiffuse>55ffffff</colordiffuse>
						<texture border="2">pvr/ProgressBack.png</texture>
					</control>
					
					<!-- Program name -->
					<control type="label" id="1">
						<left>20</left>
						<top>0</top>
						<width>56</width>
						<height>92</height>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<left>8</left>
						<top>32</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<left>8</left>
						<top>28</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

				</itemlayout>

				<focusedlayout width="100" height="92">

					<!-- Background -->
					<control type="image" id="14">
						<left>3</left>
						<top>3</top>
						<width>94</width>
						<height>86</height>
						<texture border="2">pvr/ProgressBack.png</texture>
					</control>

					<!-- Program name -->
					<control type="label" id="1">
						<left>20</left>
						<top>0</top>
						<width>56</width>
						<height>92</height>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<left>8</left>
						<top>32</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<left>8</left>
						<top>28</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

				</focusedlayout>

			</control>

			<!-- Program preview & info -->
			<control type="group">
				<left>120</left>
				<top>840</top>

				<control type="image">
					<width>120</width>
					<height>120</height>
					<texture background="true" fallback="pvr/defaultchannel.png">$INFO[Container(10).ListItem.Icon]</texture>
					<aspectratio align="right" aligny="top">keep</aspectratio>
				</control>

				<control type="label">
					<left>180</left>
					<top>20</top>
					<width>500</width>
					<height>36</height>
					<label>[B]$INFO[ListItem.Label][/B]</label>
				</control>

				<control type="label">
					<left>180</left>
					<top>62</top>
					<width>500</width>
					<height>36</height>
					<label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ]</label>
				</control>

				<!-- Plot -->
				<control type="textbox">
					<left>880</left>
					<width>800</width>
					<height>124</height>
					<align>justify</align>
					<textcolor>TextColorFO</textcolor>
										<label fallback="161">$INFO[ListItem.Plot]</label>
				</control>

			</control>

		</control>

	</include>

</includes>