<includes>

	<include name="LiveTVGuideNowNext">

		<control type="group">
			<visible>Control.IsVisible(16)</visible>

			<!-- Start date -->
			<control type="label">
				<left>120</left>
				<top>170</top>
				<width>800</width>
				<height>33</height>
				<aligny>top</aligny>
				<font>font33</font>
				<label>$INFO[ListItem.StartDate]</label>
			</control>

			<!-- List -->
			<control type="list" id="16">
				<left>120</left>
				<top>226</top>
				<width>1020</width>
				<height>648</height>
				<onup>16</onup>
				<ondown>16</ondown>
				<onleft>3000</onleft>
				<onright>70</onright>
				<pagecontrol>70</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="535">list</viewtype>				
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="1020" height="108">

					<!-- Channel image -->
					<control type="image">
						<left>9</left>
						<top>9</top>
						<width>90</width>
						<height>90</height>
						<texture background="true" fallback="pvr/defaultchannel.png">$VAR[PVRChannelIcon]</texture>
					</control>

					<!-- Start time -->
					<control type="label">
						<left>268</left>
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- End time -->
					<control type="label">
						<left>268</left>
						<top>54</top>
						<width>200</width>
						<height>27</height>
						<align>right</align>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.EndTime]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>308</left>
						<top>12</top>
						<width>712</width>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Genre -->
					<control type="label">
						<left>308</left>
						<top>54</top>
						<width>712</width>
						<height>27</height>
						<font>font27</font>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.Genre]</label>
					</control>

					<!-- Progress -->
					<control type="progress">
						<left>308</left>
						<top>93</top>
						<width>706</width>
						<height>6</height>
						<colordiffuse>IconColor1</colordiffuse>
						<texturebg border="2">osd/OSDProgressBack.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture border="2">osd/OSDProgressBar.png</midtexture>
						<righttexture>-</righttexture>
						<info>ListItem.Progress</info>
						<visible>ListItem.HasEpg</visible>
					</control>

				</itemlayout>

				<focusedlayout width="1020" height="108">

					<!-- Background -->
					<control type="image">
						<width>1020</width>
						<height>108</height>
						<texture border="2">pvr/ProgressBack.png</texture>
					</control>

					<!-- Channel image -->
					<control type="image">
						<left>9</left>
						<top>9</top>
						<width>90</width>
						<height>90</height>
						<texture background="true" fallback="pvr/defaultchannel.png">$VAR[PVRChannelIcon]</texture>
					</control>

					<!-- Start time -->
					<control type="label">
						<left>268</left>
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- End time -->
					<control type="label">
						<left>268</left>
						<top>54</top>
						<width>200</width>
						<height>27</height>
						<align>right</align>
						<label>$INFO[ListItem.EndTime]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>308</left>
						<top>12</top>
						<width>712</width>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Genre -->
					<control type="label">
						<left>308</left>
						<top>54</top>
						<width>712</width>
						<height>27</height>
						<font>font27</font>
						<textcolor>TextColorFO</textcolor>
						<label>$INFO[ListItem.Genre]</label>
					</control>

					<!-- Progress -->
					<control type="progress">
						<left>308</left>
						<top>93</top>
						<width>706</width>
						<height>6</height>
						<colordiffuse>IconColor1</colordiffuse>
						<texturebg border="2">osd/OSDProgressBack.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture border="2">osd/OSDProgressBar.png</midtexture>
						<righttexture>-</righttexture>
						<info>ListItem.Progress</info>
						<visible>ListItem.HasEpg</visible>
					</control>

				</focusedlayout>

			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="70">
				<left>1152</left>
				<top>226</top>
				<width>20</width>
				<height>648</height>
				<onleft>16</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>IconColor1</colordiffuse>
				<texturesliderbackground border="6,1,8,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="8,1,6,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="8,1,6,1">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
				<animation effect="fade" start="100" end="50" time="200" condition="!Control.HasFocus(70)">Conditional</animation>
			</control>

			<!-- Channel preview & info -->
			<control type="group">
				<right>120</right>
				<top>246</top>
				<width>512</width>

				<!-- Program name -->
				<control type="label">
					<width>512</width>
					<label>$INFO[Container(16).ListItem.Title]</label>
				</control>

				<control type="group">
					<top>76</top>

					<!-- Plot -->
					<control type="textbox">
						<width>512</width>
						<height>460</height>
						<align>justify</align>
						<font>font25</font>
						<textcolor>TextColorFO</textcolor>
												<info>Container(16).ListItem.Plot</info>
					</control>

					<!-- Genre -->
					<control type="label">
						<right>0</right>
						<top>504</top>
						<width>512</width>
						<height>30</height>
						<font>font30</font>
						<align>right</align>
						<label>$INFO[Container(16).ListItem.Genre]</label>
					</control>

				</control>

			</control>

			<!-- Channel count -->
			<control type="grouplist">
				<right>120</right>
				<bottom>110</bottom>
				<width>800</width>
				<height>44</height>
				<itemgap>6</itemgap>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<control type="label">
					<top>3</top>
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$INFO[Container(16).NumItems]</label>
					<font>font25</font>
					<textcolor>TextColorFO</textcolor>
				</control>

				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$VAR[ContentType]</label>
					<font>font33</font>
					<textcolor>TextColorFO</textcolor>
				</control>

			</control>

		</control>

	</include>

</includes>