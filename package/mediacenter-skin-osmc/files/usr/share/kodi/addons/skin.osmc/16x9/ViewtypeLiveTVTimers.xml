<includes>

	<include name="LiveTVTimers">

		<control type="group">
			<visible>Control.IsVisible(14)</visible>

			<control type="list" id="14">
				<left>120</left>
				<top>226</top>
				<width>1440</width>
				<height>648</height>
				<onup>14</onup>
				<ondown>14</ondown>
				<onleft>3000</onleft>
				<onright>70</onright>
				<pagecontrol>70</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="535">list</viewtype>				
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="1440" height="108">

					<!-- Start date -->
					<control type="label">
						<left>220</left>
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.StartDate]</label>
					</control>

					<!-- Start time - End time -->
					<control type="label">
						<left>220</left>
						<top>62</top>
						<width>200</width>
						<height>27</height>
						<font>font27</font>
						<align>right</align>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
					</control>

					<!-- Thumb -->
					<control type="image">
						<left>266</left>
						<top>3</top>
						<width>181</width>
						<height>102</height>
						<aspectratio>scale</aspectratio>
						<texture fallback="pvr/NoImage.png">$INFO[ListItem.Thumb]</texture>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>489</left>
						<top>12</top>
						<width>634</width>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>489</left>
						<top>62</top>
						<width>634</width>
						<height>27</height>
						<font>font27</font>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>

					<!-- Program comment -->
					<control type="label">
						<left>1520</left>
						<top>12</top>
						<width>400</width>
						<align>right</align>
						<textcolor>TextColorNF</textcolor>
						<label>$INFO[ListItem.Comment]</label>
					</control>

				</itemlayout>

				<focusedlayout width="1440" height="108">

					<!-- Background -->
					<control type="image">
						<width>1440</width>
						<height>108</height>
						<texture border="2">pvr/ProgressBack.png</texture>
					</control>

					<!-- Start date -->
					<control type="label">
						<left>220</left>
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<label>$INFO[ListItem.StartDate]</label>
					</control>

					<!-- Start time - End time -->
					<control type="label">
						<left>220</left>
						<top>62</top>
						<width>200</width>
						<height>27</height>
						<font>font27</font>
						<align>right</align>
						<textcolor>TextColorFO</textcolor>
						<label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
					</control>

					<!-- Thumb -->
					<control type="image">
						<left>266</left>
						<top>3</top>
						<width>181</width>
						<height>102</height>
						<aspectratio>scale</aspectratio>
						<texture fallback="pvr/NoImage.png">$INFO[ListItem.Thumb]</texture>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>489</left>
						<top>12</top>
						<width>634</width>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>489</left>
						<top>62</top>
						<width>634</width>
						<height>27</height>
						<font>font27</font>
						<textcolor>TextColorFO</textcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>

					<!-- Program comment -->
					<control type="label">
						<left>1520</left>
						<top>12</top>
						<width>400</width>
						<align>right</align>
						<label>$INFO[ListItem.Comment]</label>
					</control>

				</focusedlayout>

			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="70">
				<left>1581</left>
				<top>226</top>
				<width>20</width>
				<height>648</height>
				<onleft>14</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>IconColor1</colordiffuse>
				<texturesliderbackground border="6,1,8,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="8,1,6,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="8,1,6,1">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
				<animation effect="fade" start="100" end="50" time="200" condition="!Control.HasFocus(70)">Conditional</animation>
			</control>

			<!-- Entry count -->
			<control type="grouplist">
				<right>120</right>
				<bottom>110</bottom>
				<width>800</width>
				<height>44</height>
				<itemgap>6</itemgap>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<control type="label">
					<top>3</top>
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$INFO[Container(14).NumItems]</label>
					<font>font25</font>
					<textcolor>TextColorFO</textcolor>
				</control>

				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$VAR[ContentType]</label>
					<font>font33</font>
					<textcolor>TextColorFO</textcolor>
				</control>

			</control>

		</control>

	</include>

</includes>